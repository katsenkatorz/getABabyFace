{% extends "AdminBundle::layout.html.twig" %}
{% block admin_body %}
    <h1>{{ 'album.list_album'|trans }}</h1>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>{{ 'id'|trans }}</th>
            <th>{{ 'name'|trans }}</th>
            <th>{{ 'created'|trans }}</th>
            <th>{{ 'action'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% if albums|length != 0 %}
            {% for album in albums %}
                <tr>
                    <td>
                        <a class="btn" href="{{ path('album_show', { 'id': album.id }) }}">{{ album.id }}</a>
                    </td>
                    <td>{{ album.name }}</td>
                    <td>{% if album.created %}{{ album.created|date('d/m/Y H:i') }}{% endif %}</td>
                    <td>
                        <a class="btn" title="{{ 'album.show_album'|trans }}" href="{{ path('album_show', { 'id': album.id }) }}"><i class="material-icons">description</i></a>
                        <a class="btn" title="{{ 'album.edit_album'|trans }}" href="{{ path('album_edit', { 'id': album.id }) }}"><i class="material-icons">edit</i></a>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td class="text-center" colspan="4">{{ 'nothing'|trans }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>


    <a title="{{ 'album.create_album'|trans }}" class="pull-right btn btn-success" href="{{ path('album_new') }}"><i class="material-icons md-36">create_new_folder</i></a>

{% endblock %}
