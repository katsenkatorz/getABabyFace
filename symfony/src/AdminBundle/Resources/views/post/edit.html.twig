{% extends "AdminBundle::layout.html.twig" %}
{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
{% block admin_body %}
    <h1>{{ 'post.edit_post'|trans }}</h1>
    <div class="row">
        <div class="col-md-12">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <button class="btn btn-success pull-right" title="{{ 'post.edit_post'|trans }}" type="submit"><i class="material-icons md-36">check</i></button>
            {{ form_end(edit_form) }}
        </div>
    </div>
    <hr>
    <div class="pull-right row">
        <div class="col-md-12">
            <a class="btn btn-default" title="{{ 'back_to_list'|trans }}" href="{{ path('post_index') }}"><i class="material-icons md-36">arrow_back</i></a>
            {{ form_start(delete_form, { 'attr': {'class': 'display-inline'} }) }}
            <button  class="btn btn-danger" title="{{ 'post.delete_post'|trans }}" type="submit"><i class="material-icons md-36">delete</i></button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
