{% extends "AdminBundle::layout.html.twig" %}
{% block admin_body %}
    <h1>{{ 'post.list_post'|trans }}</h1>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>{{ 'id'|trans }}</th>
            <th>{{ 'name'|trans }}</th>
            <th>{{ 'album.album'|trans }}</th>
            <th>{{ 'created'|trans }}</th>
            <th>{{ 'action'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% if posts|length != 0 %}
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.name }}</td>
                    <td>{{ post.album }}</td>
                    <td>{{ post.created|date('d/m/Y H:i') }}</td>
                    <td>
                        <a class="btn" title="{{ 'post.show_post'|trans }}" href="{{ path('post_show', { 'id': post.id }) }}"><i class="material-icons">description</i></a>
                        <a class="btn" title="{{ 'post.edit_post'|trans }}" href="{{ path('post_edit', { 'id': post.id }) }}"><i class="material-icons">edit</i></a>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="5" class="text-center">{{ 'nothing'|trans }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>


    <a title="{{ 'post.create_post'|trans }}" class="pull-right btn btn-success" href="{{ path('post_new') }}"><i class="material-icons md-36">add_circle</i></a>

{% endblock %}
