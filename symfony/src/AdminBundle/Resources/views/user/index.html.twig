{% extends "AdminBundle::layout.html.twig" %}
{% block admin_body %}
    <h1>{{ 'user.liste_users'|trans }}</h1>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>{{ 'id'|trans }}</th>
            <th>{{ 'name'|trans }}</th>
            <th>{{ 'email'|trans }}</th>
            <th>{{ 'last_login'|trans }}</th>
            <th>{{ 'profil'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.lastLogin|date('d/m/Y H:i:s') }}</td>
                <td>
                {% for role in user.roles %}
                   {{ role }}<br>
                {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
